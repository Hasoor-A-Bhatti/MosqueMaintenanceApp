<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: url('/Masjid-Mubarak.jpg') no-repeat center center/cover;
            color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .navbar {
            background: rgba(0, 0, 0, 0.5) !important;
            transition: background 0.3s ease-in-out;
        }
        .navbar:hover {
            background: rgba(0, 0, 0, 0.8) !important;
        }
        .navbar-brand, .nav-link {
            color: white !important;
        }
        .nav-link:hover {
            color: #00ffcc !important;
        }
        .overlay {
            background: rgba(0, 0, 0, 0.6);
            min-height: 100vh;
            padding: 40px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .container {
            max-width: 1200px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }
        .card {
            margin-bottom: 20px;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(8px);
        }
        .card-header {
            cursor: pointer;
            font-weight: bold;
            background: rgba(0, 0, 0, 0.5);
            color: white;
        }
        .table {
            color: white;
        }
        .table thead {
            background: rgba(0, 0, 0, 0.7);
        }
        .table tbody tr {
            background: rgba(255, 255, 255, 0.1);
        }
    </style>
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">Mosque Maintenance</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/mosque_profile">Mosque Profile</a></li>
                    <li class="nav-item"><a class="nav-link" href="/cleaning_sessions">Cleaning Sessions</a></li>
                    <li class="nav-item"><a class="nav-link" href="/maintenance_tasks">Maintenance Tasks</a></li>
                    <li class="nav-item"><a class="nav-link" href="/bookings">Bookings</a></li>
                    <li class="nav-item"><a class="nav-link" href="/administration">Administration</a></li>
                    <li class="nav-item"><a class="nav-link" href="/incidents">Incidents</a></li>
                    <li class="nav-item"><a class="nav-link" href="/contact_us">Contact Us</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <br><br><br><br>
    <div class="overlay">
        <h1 class="text-center mb-4">Admin Dashboard</h1>
        <div class="container">

            <!-- Mosque Profile -->
            <div class="card">
                <div class="card-header" data-bs-toggle="collapse" href="#mosqueTable">
                    Mosque Profiles
                </div>
                <div class="collapse show" id="mosqueTable">
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Worship Capacity</th>
                                    <th>Car Park</th>
                                    <th>Accommodation</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Mosques.forEach(mosque => { %>
                                    <tr>
                                        <td><%= mosque.name %></td>
                                        <td><%= mosque.worship_capacity %></td>
                                        <td><%= mosque.car_park_capacity %></td>
                                        <td><%= mosque.accommodation_capacity %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Cleaning Sessions -->
            <div class="card">
                <div class="card-header" data-bs-toggle="collapse" href="#cleaningTable">
                    Cleaning Sessions
                </div>
                <div class="collapse" id="cleaningTable">
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Khuddams</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% CleaningSessions.forEach(session => { %>
                                    <tr>
                                        <td><%= session.date %></td>
                                        <td><%= session.time %></td>
                                        <td><%= session.khuddams %></td>
                                        <td><%= session.description %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Maintenance Tasks -->
            <div class="card">
                <div class="card-header" data-bs-toggle="collapse" href="#maintenanceTable">
                    Maintenance Tasks
                </div>
                <div class="collapse" id="maintenanceTable">
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Date</th>
                                    <th>Urgency</th>
                                    <th>Budget</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% MaintenanceTasks.forEach(task => { %>
                                    <tr>
                                        <td><%= task.title %></td>
                                        <td><%= task.date %></td>
                                        <td><%= task.urgency ? 'Urgent' : 'Normal' %></td>
                                        <td>$<%= task.budget %></td>
                                        <td><%= task.description %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Incidents -->
            <div class="card">
                <div class="card-header" data-bs-toggle="collapse" href="#incidentTable">
                    Incident Reports
                </div>
                <div class="collapse" id="incidentTable">
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Incidents.forEach(incident => { %>
                                    <tr>
                                        <td><%= incident.title %></td>
                                        <td><%= incident.incident_date %></td>
                                        <td><%= incident.incident_time %></td>
                                        <td><%= incident.description %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
